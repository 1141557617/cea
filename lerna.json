{
  "packages": [
    "src/core",
    "src/internal",
    "src/plugins/*"
  ],
  "version": "independent",
  "ignoreChanges": [
    "**/CHANGELOG.md",
    "**/*.md"
  ],
  "command": {
    "version": {
      "allowBranch": "main",
      "conventionalCommits": true,
      "createRelease": "github",
      "exact": true,
      "message": "chore(release): publish"
    }
  }
}
