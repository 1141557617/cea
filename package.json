{
  "name": "cea",
  "version": "0.0.0",
  "description": "campusphere-elegant-auth: login to swms/campusphere at ease",
  "scripts": {
    "bootstrap": "lerna exec -- npm install",
    "prebuild": "prettier . -w --ignore-path .gitignore",
    "postbuild": "ts-node build/docs.ts",
    "build": "lerna exec -- rm -rf lib/ && tsc --build",
    "test": "jest",
    "dry": "lerna exec -- npm pack && lerna exec -- rm -rf package *.tgz"
  },
  "keywords": [
    "campusphere",
    "daliy",
    "campus",
    "辅导猫",
    "今日校园",
    "自动",
    "签到"
  ],
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 80
  },
  "repository": "beetcb/cea",
  "author": {
    "name": "beetcb",
    "email": "i@beetcb.com",
    "url": "https://github.com/beetcb/cea"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "jest": "^26.6.3",
    "lerna": "^4.0.0",
    "prettier": "2.3.0",
    "ts-node": "^10.0.0",
    "typedoc": "^0.20.36",
    "typedoc-github-wiki-theme": "^0.3.0",
    "typedoc-plugin-markdown": "^3.8.1",
    "typescript": "^4.2.4"
  }
}
