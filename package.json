{
  "name": "ceajs-monorepo",
  "private": true,
  "scripts": {
    "prebootstrap": "npm i",
    "bootstrap": "lerna exec -- npm i",
    "postbootstrap": "npm run build && lerna bootstrap",
    "docs": "node -e \"$(esbuild build/docs.ts --minify --format=cjs)\"",
    "prebuild": "dprint fmt",
    "build": "tsc --build",
    "build:debug": "lerna run build:debug",
    "test": "jest",
    "pub": "npm run build && env-cmd lerna publish",
    "dry": "lerna exec -- npm pack && lerna exec -- rm -rf package *.tgz"
  },
  "keywords": [
    "campusphere",
    "daliy",
    "campus",
    "辅导猫",
    "今日校园",
    "自动",
    "签到"
  ],
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 80
  },
  "repository": "ceajs/cea",
  "author": {
    "name": "beetcb",
    "email": "i@beetcb.com",
    "url": "https://github.com/ceajs/cea"
  },
  "license": "MIT",
  "devDependencies": {
    "conventional-changelog-cli": "^2.1.1",
    "env-cmd": "^10.1.0",
    "esbuild": "^0.12.15",
    "lerna": "^4.0.0",
    "ts-jest": "^27.0.4",
    "typedoc-github-wiki-theme": "^0.3.0",
    "typedoc-plugin-markdown": "^3.8.1",
    "typescript": "^4.4.4"
  }
}
