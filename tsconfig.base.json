{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "emitDeclarationOnly": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "composite": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true
  }
}
